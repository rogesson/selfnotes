<div class="container">

  <%= link_to 'New Note', new_note_path, class: "btn btn-primary" %>

  <% if @notes %>
    <h1>Notes</h1>
    <div class="row">
      <div class="col-sm-4">
        <% @notes.each do |note| %>
          <div class="card" style="width: 18rem;">
            <h5 class="card-header">Notificações</h5>
            <div class="card-body">
              <h5 class="card-title"><%= note.title %></h5>
              <p class="card-text"><%= note.body %></p>
              <a href="#" class="btn btn-primary">Edit</a>
              <a href="#" class="btn btn-danger float-right">Delete</a>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    Welcome ;)
  <% end %>
</div>
